---
const { navigationTo = '', imgSrc, title, notation } = Astro.props;
---

<li class="flex flex-col items-center w-full">
	<a href={navigationTo} class="relative w-full h-48 rounded-lg transition-colors navItem group" style="">
		<div class="absolute inset-0 m-0 box-border NavItem">
			<img
				class="block object-cover absolute inset-0 visible p-0 m-auto w-0 min-w-full max-w-full h-0 min-h-full max-h-full rounded-lg box-border"
				sizes="100vw"
				src={imgSrc}
				alt="UIWTF"
			/>
		</div>
		<div
			class="absolute inset-0 bg-slate-900/30 transition-opacity opacity-0 group-hover:opacity-100 backdrop-blur-[1px] duration-300 rounded-lg shadow-white-lg dark:shadow-slate-lg"
			style="transition-timing-function: cubic-bezier(.2, .8, .2, 1);"
		>
		</div>
		<div
			class="absolute bottom-4 left-8 opacity-0 transition-opacity translate-y-4 group-hover:opacity-100 group-hover:translate-y-0"
			style="
      transition-property: opacity, transform;
      transition-timing-function: cubic-bezier(0.4, 0.3, 0.7, 1);"
		>
			<h1 class="text-2xl font-bold text-white">{title}</h1>
			<p class="pr-20 w-full text-white">{notation}</p>
		</div>
	</a>
</li>
