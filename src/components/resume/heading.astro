---
const props = Astro.props;
const id = props.id ?? null;
---

{id !== null ? (
	<h1 class={`font-bold text-2xl ${props.class !== undefined ?  props.class : 'dark:text-white text-slate-800'} `} {id} >
		<slot />
	</h1> ) : (
	<h1 class={` font-bold text-2xl ${props.class !== undefined ?  props.class : 'dark:text-white text-slate-800'} ${props.class === undefined ? '' : props.class}`}>
		<slot />
	</h1>
	)
}
