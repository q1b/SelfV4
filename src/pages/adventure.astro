---
// Component Imports
import Layout from '../layouts/MainLayout.astro';
import Timeline from '@/components/adventure/timeline.astro';
const content = {
	title: 'Adventure of my life',
	description: 'When I started learning Online web',
};
---

<Layout {content} canonicalURL={Astro.request.canonicalURL}>
	<section class="container flex flex-col px-10 pt-10 pb-96">
		<div class="sticky top-4 z-20 bg-blue-200 dark:bg-blue-500/10 backdrop-blur-sm w-max px-2 pb-1 rounded-md">
			<h1
				class="
							flex
							[text-shadow:0px_0.1px_2px_#FFF7] 
							dark:[text-shadow:0px_0.1px_2px_#0007] 
							text-white
							dark:text-slate-300 
							underline decoration-wavy 
							dark:decoration-slate-600 
							decoration-white
							text-lg"
			>
				<span class="text-sky-500 font-bold"> Advent </span>
				<span class="text-rose-500 font-bold"> urous </span>
				&nbsp;Journey
			</h1>
		</div>
		<div id="mask" class="fixed opacity-0 hidden top-0 left-0 h-screen w-full"></div>
		<p
			class="p-2 
							dark:[text-shadow:0px_0.1px_2px_#fff] 
							[text-shadow:0px_0.1px_2px_#0007] 
							text-slate-700 dark:text-white 
							pb-48"
		>
			because I was doing the thing which I was not supposed to do!
		</p>
		<section id="cardsContainer" class="flex flex-col gap-y-16 items-center">
			<Timeline />
		</section>
	</section>

	<script slot="script" src={Astro.resolve('../lib/intersection.ts')}></script>
</Layout>
